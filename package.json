{
  "name": "@spritz-finance/contract-core",
  "description": "Core contracts for Spritz payment modules",
  "version": "1.0.0",
  "author": {
    "name": "Spritz Finance",
    "url": "https://github.com/spritz-finance"
  },
  "scripts": {
    "clean": "shx rm -rf ./artifacts ./cache ./coverage ./src/types ./coverage.json && yarn typechain",
    "commit": "git-cz",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" && yarn typechain",
    "deploy:polygon": "hardhat deploy:SpritzPay --network polygon-mainnet --env production",
    "upgrade:polygon": "hardhat upgrade:SpritzPayV2 --network polygon-mainnet --env production",
    "deploy-staging:polygon": "hardhat deploy:SpritzPay --network polygon-mainnet --env staging",
    "upgrade-staging:polygon": "hardhat upgrade:SpritzPayV2 --network polygon-mainnet --env staging",
    "deploy:bsc": "hardhat deploy:SpritzPay --network bsc --env production",
    "upgrade:bsc": "hardhat upgrade:SpritzPayV2 --network bsc --env production",
    "deploy-staging:bsc": "hardhat deploy:SpritzPay --network bsc --env staging",
    "upgrade-staging:bsc": "hardhat upgrade:SpritzPayV2 --network bsc --env staging",
    "deploy:mainnet": "hardhat deploy:SpritzPay --network mainnet --env production",
    "upgrade:mainnet": "hardhat upgrade:SpritzPayV2 --network mainnet --env production",
    "deploy-staging:mainnet": "hardhat deploy:SpritzPay --network mainnet --env staging",
    "upgrade-staging:mainnet": "hardhat upgrade:SpritzPayV2 --network mainnet --env staging",
    "deploy-staging:optimism": "hardhat deploy:SpritzPayV2 --network optimism --env staging",
    "deploy-staging:arbitrum": "hardhat deploy:SpritzPayV2 --network arbitrum --env staging",
    "upgrade:arbitrum": "hardhat upgrade:SpritzPayV2 --network arbitrum --env production",
    "upgrade-staging:arbitrum": "hardhat upgrade:SpritzPayV2 --network arbitrum --env staging",
    "upgrade:optimism": "hardhat upgrade:SpritzPayV2 --network optimism --env production",
    "upgrade-staging:optimism": "hardhat upgrade:SpritzPayV2 --network optimism --env staging",
    "deploy:optimism": "hardhat deploy:SpritzPayV2 --network optimism --env production",
    "deploy:arbitrum": "hardhat deploy:SpritzPayV2 --network arbitrum --env production",
    "deploy:avalanche": "hardhat deploy:SpritzPay --network avalanche --env production",
    "upgrade:avalanche": "hardhat upgrade:SpritzPay --network avalanche --env production",
    "deploy-staging:avalanche": "hardhat deploy:SpritzPay --network avalanche --env staging",
    "upgrade-staging:avalanche": "hardhat upgrade:SpritzPay --network avalanche --env staging",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yml --ignore-path ./.eslintignore --ext .js,.ts .",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "prettier": "prettier --config ./.prettierrc.yml --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yml \"**/*.{js,json,md,sol,ts,yml}\"",
    "test": "hardhat test",
    "test:trace": "hardhat test --trace",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "slither": "slither ./contracts/SpritzPayV2.sol --solc-remaps '@openzeppelin=node_modules/@openzeppelin @uniswap=node_modules/@uniswap' --exclude naming-convention,external-function,low-level-calls --filter-paths node_modules",
    "toolbox": "docker run -it --rm -v /${PWD}:/src trailofbits/eth-security-toolbox"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@ethersproject/abi": "^5.6.4",
    "@ethersproject/abstract-signer": "^5.6.2",
    "@ethersproject/bignumber": "^5.6.2",
    "@ethersproject/bytes": "^5.6.1",
    "@ethersproject/providers": "^5.6.8",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.3",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3",
    "@openzeppelin/hardhat-defender": "^1.8.0",
    "@openzeppelin/hardhat-upgrades": "^1.21.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@spritz-finance/sdk": "^0.1.27",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.3",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.5",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "@uniswap/v3-periphery": "^1.4.3",
    "axios": "0.27.0",
    "chai": "^4.3.6",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "date-fns": "^2.29.2",
    "dotenv": "^16.0.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "ethers": "^5.7.0",
    "fs-extra": "^10.1.0",
    "hardhat": "^2.10.1",
    "hardhat-abi-exporter": "^2.10.0",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "hardhat-storage-layout": "^0.1.7",
    "hardhat-tracer": "^1.1.0-rc.9",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "mocha": "^10.0.0",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "quickswap-sdk": "^3.0.9",
    "shx": "^0.3.4",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.21",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^4.7.4"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethers",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity",
    "template",
    "typescript",
    "typechain"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "UNLICENSED"
}
